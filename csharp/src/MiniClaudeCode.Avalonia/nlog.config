<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Warn"
      internalLogFile="${specialfolder:folder=LocalApplicationData}/MiniClaudeCode/nlog-internal.log">

  <variable name="logDir" value="${specialfolder:folder=LocalApplicationData}/MiniClaudeCode/logs"/>
  <variable name="logLayout" value="${longdate}|${level:uppercase=true:padding=5}|${logger:shortName=true}|${message}${onexception:inner=${newline}${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=type,message,method}}"/>

  <targets>
    <!-- 主日志文件：按日期归档，保留详细异常堆栈 -->
    <target xsi:type="File"
            name="mainLog"
            fileName="${logDir}/miniclaudecode-${shortdate}.log"
            archiveFileName="${logDir}/archives/miniclaudecode-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="30"
            layout="${logLayout}"
            encoding="utf-8" />

    <!-- 崩溃/错误专用文件：便于快速定位问题 -->
    <target xsi:type="File"
            name="errorLog"
            fileName="${logDir}/errors.log"
            layout="${logLayout}"
            encoding="utf-8" />

    <!-- 调试用控制台输出（开发时可选） -->
    <target xsi:type="Console"
            name="console"
            layout="${logLayout}" />
  </targets>

  <rules>
    <!-- Debug 及以上写入主日志 -->
    <logger name="*" minlevel="Debug" writeTo="mainLog" />
    <!-- Error 及以上额外写入错误日志 -->
    <logger name="*" minlevel="Error" writeTo="errorLog" />
    <!-- Release 时注释掉 console，开发时保留 -->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>
