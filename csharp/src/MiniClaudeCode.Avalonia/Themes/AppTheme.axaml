<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================ -->
    <!--  MiniClaudeCode Dark Theme Overrides (Catppuccin Mocha-ish)  -->
    <!-- ============================================================ -->

    <!-- Global font settings -->
    <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- Monospace font for code areas -->
    <Style Selector="TextBlock.code">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Menlo, monospace" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Panel header styling -->
    <Style Selector="TextBlock.panelHeader">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="8,6" />
        <Setter Property="Opacity" Value="0.85" />
    </Style>

    <!-- Chat message role labels -->
    <Style Selector="TextBlock.roleLabel">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>

    <!-- Status badge styling -->
    <Style Selector="Border.badge">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="6,2" />
    </Style>

    <!-- ============================================================ -->
    <!--  Composer / Input Area                                       -->
    <!-- ============================================================ -->

    <Style Selector="TextBox.chatInput">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Background" Value="{DynamicResource ThemeInputBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeInputForeground}" />
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Menlo, monospace" />
    </Style>

    <Style Selector="TextBox.chatInput:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputFocusBorder}" />
    </Style>

    <!-- ============================================================ -->
    <!--  Model Selector Dropdown                                     -->
    <!-- ============================================================ -->

    <Style Selector="ComboBox.modelSelector">
        <Setter Property="Background" Value="{DynamicResource ThemeInputBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeInputForeground}" />
        <Setter Property="MinHeight" Value="28" />
    </Style>

    <Style Selector="ComboBox.modelSelector:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputFocusBorder}" />
    </Style>

    <!-- ============================================================ -->
    <!--  Chevron Toggle Button (expand/collapse)                     -->
    <!-- ============================================================ -->

    <Style Selector="Button.chevronToggle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="4,0" />
        <Setter Property="MinWidth" Value="16" />
        <Setter Property="MinHeight" Value="16" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeMutedForeground}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.chevronToggle:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeInputForeground}" />
    </Style>

    <!-- ============================================================ -->
    <!--  Tool call item styling                                      -->
    <!-- ============================================================ -->

    <Style Selector="Border.toolCallItem">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,1" />
    </Style>

    <!-- ============================================================ -->
    <!--  Buttons                                                     -->
    <!-- ============================================================ -->

    <!-- Accent button style (Send) -->
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="{DynamicResource ThemeAccent}" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentForeground}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="MinHeight" Value="32" />
    </Style>
    <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBackground}" />
    </Style>

    <!-- Cancel / danger button style -->
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{DynamicResource ThemeDanger}" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeDangerForeground}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="MinHeight" Value="32" />
    </Style>
    <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBackground}" />
    </Style>

    <!-- ============================================================ -->
    <!--  General                                                     -->
    <!-- ============================================================ -->

    <!-- Separator line -->
    <Style Selector="Separator">
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Background" Value="{DynamicResource ThemePanelBorder}" />
    </Style>

    <!-- Scrollbar tweaks for dark theme -->
    <Style Selector="ScrollViewer">
        <Setter Property="AllowAutoHide" Value="True" />
    </Style>

    <!-- Processing indicator in input -->
    <Style Selector="TextBox:disabled">
        <Setter Property="Opacity" Value="0.6" />
    </Style>

    <!-- TreeView styling for file explorer -->
    <Style Selector="TreeViewItem">
        <Setter Property="Padding" Value="2,1" />
    </Style>

    <!-- ComboBox compact styling -->
    <Style Selector="ComboBox">
        <Setter Property="Padding" Value="6,3" />
    </Style>

    <!-- ============================================================ -->
    <!--  Window Control Buttons (Custom Title Bar)                   -->
    <!-- ============================================================ -->

    <!-- Base window control button -->
    <Style Selector="Button.windowControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="36" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeMutedForeground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>
    <Style Selector="Button.windowControl:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeButtonForeground}" />
    </Style>
    <Style Selector="Button.windowControl:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeListActiveBackground}" />
    </Style>

    <!-- Close button (red hover) -->
    <Style Selector="Button.windowControlClose">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="36" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeMutedForeground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>
    <Style Selector="Button.windowControlClose:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#E81123" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="Button.windowControlClose:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#C50F1F" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- ============================================================ -->
    <!--  AI Chat Panel Header                                        -->
    <!-- ============================================================ -->

    <Style Selector="Button.chatHeaderAction">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    <Style Selector="Button.chatHeaderAction:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeListHoverBackground}" />
    </Style>

    <!-- ============================================================ -->
    <!--  Find/Replace Toggle Buttons                                 -->
    <!-- ============================================================ -->

    <Style Selector="Button.findToggle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeMutedForeground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>
    <Style Selector="Button.findToggle:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeListHoverBackground}" />
    </Style>
    <Style Selector="Button.findToggleActive">
        <Setter Property="Background" Value="{DynamicResource ThemeListActiveBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputFocusBorder}" />
    </Style>

    <!-- ============================================================ -->
    <!--  Workbench primitives                                        -->
    <!-- ============================================================ -->

    <Style Selector="Window.workbenchRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeWorkbenchBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeText}" />
    </Style>

    <Style Selector="Border.workbenchTitleBar">
        <Setter Property="Background" Value="{DynamicResource ThemeTitleBarBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeTitleBarBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style Selector="Border.workbenchSidebar">
        <Setter Property="Background" Value="{DynamicResource ThemeSideBarBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeSideBarBorder}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
    </Style>

    <Style Selector="Border.workbenchPanel">
        <Setter Property="Background" Value="{DynamicResource ThemePanelBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePanelBorder}" />
    </Style>

    <Style Selector="Border.sidebarSectionRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeSideBarBackground}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="Border.sidebarSectionHeader">
        <Setter Property="Background" Value="{DynamicResource ThemePanelBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePanelBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="32" />
    </Style>

    <Style Selector="TextBlock.sidebarSectionTitle">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeText}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="Border.sidebarSectionBody">
        <Setter Property="Background" Value="{DynamicResource ThemePanelBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePanelBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,6" />
    </Style>

    <Style Selector="Button.panelIconAction">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeMutedForeground}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>

    <Style Selector="Button.panelIconAction:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeListHoverBackground}" />
    </Style>

    <Style Selector="Button.activityBarButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeActivityBarInactiveForeground}" />
    </Style>

    <Style Selector="Button.activityBarButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeListHoverBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeActivityBarForeground}" />
    </Style>

    <Style Selector="Button.statusBarItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource ThemeStatusBarForeground}" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>

    <Style Selector="Button.statusBarItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeStatusBarHoverBackground}" />
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeInputFocusBorder}" />
    </Style>

</Styles>
