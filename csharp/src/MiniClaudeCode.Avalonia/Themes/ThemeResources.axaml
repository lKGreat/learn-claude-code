    <SolidColorBrush x:Key="ThemeTabActiveIndicator" Color="#89B4FA" />
    <SolidColorBrush x:Key="ThemeWelcomeHighlight" Color="#313244" />
    <SolidColorBrush x:Key="ThemeMenuBarBackground" Color="#181825" />
</ResourceDictionary>
