<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MiniClaudeCode.Avalonia.ViewModels"
             x:Class="MiniClaudeCode.Avalonia.Views.SearchPanelView"
             x:DataType="vm:SearchPanelViewModel">

    <Border Classes="sidebarSectionRoot"
            Background="{DynamicResource ThemeSideBarBackground}">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top"
                    Classes="sidebarSectionHeader">
                <TextBlock Text="Search"
                           Classes="sidebarSectionTitle" />
            </Border>

            <!-- Search inputs -->
            <Border DockPanel.Dock="Top"
                    Classes="sidebarSectionBody">
                <StackPanel Spacing="4">
                    <!-- Search text -->
                    <DockPanel>
                        <Button Classes="panelIconAction"
                                DockPanel.Dock="Right"
                                Content="Aa"
                                ToolTip.Tip="Match Case"
                                FontSize="10" Padding="4,2" />
                        <TextBox Text="{Binding SearchText}"
                                 Watermark="Search"
                                 FontSize="12"
                                 Background="{DynamicResource ThemeInputBackground}"
                                 BorderBrush="{DynamicResource ThemeInputBorder}" />
                    </DockPanel>

                    <!-- Replace text (collapsible) -->
                    <TextBox Text="{Binding ReplaceText}"
                             Watermark="Replace"
                             FontSize="12"
                             Background="{DynamicResource ThemeInputBackground}"
                             BorderBrush="{DynamicResource ThemeInputBorder}"
                             IsVisible="{Binding ShowReplace}" />

                    <!-- Toggle options -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Classes="panelIconAction"
                            Content="\u21C5"
                                Command="{Binding ToggleReplaceCommand}"
                                ToolTip.Tip="Toggle Replace"
                            FontSize="10" Padding="4,2" />
                        <Button Classes="panelIconAction"
                            Content=".*"
                                ToolTip.Tip="Use Regex"
                            FontSize="10" Padding="4,2" />
                        <Button Classes="panelIconAction"
                            Content="|W|"
                                ToolTip.Tip="Whole Word"
                            FontSize="10" Padding="4,2" />
                    </StackPanel>

                    <!-- File filters -->
                    <TextBox Text="{Binding IncludePattern}"
                             Watermark="files to include (e.g. *.cs)"
                             FontSize="10"
                             Background="{DynamicResource ThemeInputBackground}"
                             BorderBrush="{DynamicResource ThemeInputBorder}" />

                    <!-- Search button -->
                    <Button Content="Search"
                            Command="{Binding SearchCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Padding="6,3"
                            FontSize="11"
                            IsEnabled="{Binding !IsSearching}" />
                </StackPanel>
            </Border>

            <!-- Results summary -->
            <TextBlock DockPanel.Dock="Top"
                       Text="{Binding ResultsSummary}"
                       FontSize="10"
                       Opacity="0.5"
                       Margin="8,4"
                       IsVisible="{Binding ResultsSummary, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

            <!-- Results list -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Results}" Padding="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:SearchResult">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4,2"
                                    Cursor="Hand"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Command="{Binding $parent[ItemsControl].((vm:SearchPanelViewModel)DataContext).OpenResultCommand}"
                                    CommandParameter="{Binding}">
                                <StackPanel Spacing="1">
                                    <TextBlock Text="{Binding FileName}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource ThemeText}" />
                                    <TextBlock Text="{Binding MatchPreview}"
                                               FontSize="10"
                                               Foreground="{DynamicResource ThemeMutedForeground}"
                                               TextTrimming="CharacterEllipsis"
                                               MaxLines="1"
                                               FontFamily="Cascadia Code, Consolas, monospace" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
