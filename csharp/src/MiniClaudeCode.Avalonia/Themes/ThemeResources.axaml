    <SolidColorBrush x:Key="ThemeActivityBarActiveBorder" Color="#89B4FA" />

    <SolidColorBrush x:Key="ThemeSideBarBackground" Color="#181825" />
    <SolidColorBrush x:Key="ThemeSideBarBorder" Color="#313244" />

    <SolidColorBrush x:Key="ThemeEditorBackground" Color="#1E1E2E" />
    <SolidColorBrush x:Key="ThemePanelBackground" Color="#181825" />
    <SolidColorBrush x:Key="ThemePanelBorder" Color="#313244" />

    <SolidColorBrush x:Key="ThemeStatusBarBackground" Color="#313244" />
    <SolidColorBrush x:Key="ThemeStatusBarForeground" Color="#CDD6F4" />
